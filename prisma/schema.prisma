generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artwork {
  id        String   @id @default(cuid())
  title     String
  price     Int
  thumbnail String
  artist    String
  tags      String[]
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  artworkId String
  amount    Int
  email     String?
  createdAt DateTime @default(now())
}
